<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/pe_defaule_item_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/homeimage4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/default_time_view"
        android:layout_alignBottom="@+id/homeimage4"
        android:layout_alignLeft="@+id/homeimage4"
        android:layout_alignStart="@+id/homeimage4"
        android:layout_marginLeft="5dp"
        android:id="@+id/imageView10" />

    <TextView
        android:text="TextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignLeft="@+id/hometext7"
        android:layout_alignStart="@+id/hometext7"
        android:id="@+id/hometext8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/imageView11"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignLeft="@+id/homeimage4"
        android:layout_alignStart="@+id/homeimage4" />

    <TextView
        android:text="TextView"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hometext7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/homeimage4"
        android:layout_toEndOf="@+id/homeimage4"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/hometext6"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A6A6A6"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>