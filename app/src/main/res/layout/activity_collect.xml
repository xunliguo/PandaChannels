<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.pandachannels.fragmentobserve.activity.centeracticity.CollectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F539E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shi_collect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personal_back_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:textSize="20dp" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/shi_tab"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/shi_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
